<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <div>
        <%- include('./partials/header.ejs') %>

        <div class="FAF6EA-bg-color" style="padding: 40px 9%;">
            <div class="d-flex align-items-center gap-2">
                <div class="rounded-circle primary-bg-color d-flex justify-content-center align-items-center" style="width: 50px; height: 50px;">
                    <i class="fa-solid fa-cube text text-white" style="font-size: 20px;"></i>
                </div>
                <h4 class="dark-blue-color text fs-4 fw-semibold">ĐẤU GIÁ ĐANG DIỄN RA</h4>
            </div>
             <button class="button-primary px-3 py-1" style="margin-top: 20px;">
                 <a href="?type=0" class="justify-content-left">Phiên đã kết thúc</a>
               </button>

            <div class="mt-4 d-flex gap-3 align-items-start">
                <!-- Danh mục -->
                <div class="bg-white rounded p-3" 
                    style="width: 17rem;">
                    <div class="d-flex gap-3 align-items-center">
                        <i class="fa-solid fa-list"></i>
                        <span class="fw-bold">Danh mục</span>
                    </div>
                    <hr />
                    <ul class="d-flex flex-column gap-2 au_menu">
                        <li><a href="/auction/1" class="d-flex align-items-center gap-3 px-3 py-2 rounded">
                            <i class="fa-solid fa-arrows-up-down-left-right"></i>
                            <span>Phần mềm</span>
                        </a></li>
                        <li><a href="/auction/2" class="d-flex align-items-center gap-3 px-3 py-2 rounded">
                            <i class="fa-solid fa-arrows-up-down-left-right"></i>
                            <span>Xây dựng</span>
                        </a></li>
                        <li><a href="/auction/3" class="d-flex align-items-center gap-3 px-3 py-2 rounded">
                            <i class="fa-solid fa-arrows-up-down-left-right"></i>
                            <span>Đồ gia dụng</span>
                        </a></li>
                        <li><a href="/auction/4" class="d-flex align-items-center gap-3 px-3 py-2 rounded">
                            <i class="fa-solid fa-arrows-up-down-left-right"></i>
                            <span>Thời trang</span>
                        </a></li>
                        <!-- <li><a href="" class="d-flex align-items-center gap-3 px-3 py-2 rounded">
                            <i class="fa-solid fa-arrows-up-down-left-right"></i>
                            <span>Sản phẩm thắng</span>
                        </a></li>
                        <li><a href="" class="d-flex align-items-center gap-3 px-3 py-2 rounded">
                            <i class="fa-solid fa-arrows-up-down-left-right"></i>
                            <span>Sản phẩm thắng</span>
                        </a></li> -->
                    </ul>
                </div>

                <script>
                    var path_URL = location.pathname
                    var au_menu = document.querySelectorAll('.au_menu a')

                    if(path_URL == '/auction/1'){
                        au_menu[0].classList.add('category-active')
                    }else if(path_URL == '/auction/2'){
                        au_menu[1].classList.add('category-active')
                    }else if(path_URL == '/auction/3'){
                        au_menu[2].classList.add('category-active')
                    }else if(path_URL == '/auction/4'){
                        au_menu[3].classList.add('category-active')
                    }
                </script>

                <!-- Danh sách đấu giá -->
                <div class="d-flex flex-column gap-3 flex-fill" style="height: 52vh; overflow-y: scroll;">
                    <%for(let i=0; i< list.length;i++){ %>
                    <a href="/auction/detail/<%= list[i].MaPhienDauGia %>">
                        <div class="flex-fill p-3 bg-white rounded d-flex justify-content-between align-items-center">
                       
                        <div style="width: 53%;">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-3">
                                    <img src="/public/images/user/<%= list[i].Avatar %>" class="rounded-circle" style="width: 60px; height: 60px;" alt="">
                                    <span class="fw-semibold"><%= list[i].HoVaTen %></span>
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="ended-div  <%= list[i].TrangThai == 1 ? 'start' : '' %>"> <%= list[i].TrangThai == 1 ? 'work' : 'ENDED' %> </div>
                                    <span><%= list[i].NgayKetThuc %></span>
                                </div>
                            </div>
                            <!-- Chi tiết yêu cầu -->
                            <div class="mt-3">
                                <h4 class="fs-5 text">Yêu cầu: <%= list[i].TieuDe %></h4>
                                <%- list[i].MoTa %>
                            </div>
                        </div>
                        <div class="" style="width: 45%;">
                            <% if( list[i].TrangThai == 1){ %>
                            <div class="d-flex align-items-center justify-content-center mb-4 gap-3 primary-color text fs-3">
                                <i class="fa-solid fa-hourglass-end"></i>
                                <div id="countdown">02:30:45</div>
                            </div>
                            <%}%>
                            <div class="d-flex justify-content-center gap-3">
                                <div class="px-4 py-2 rounded-4 bg-body-tertiary d-flex flex-column align-items-center" style="width: max-content;">
                                    <span>Giá niêm yết</span>
                                    <div class="d-flex align-items-center gap-2 mt-1">
                                        <span class="fs-7 fw-bold dark-blue-color">$ <%= list[i].NganSachToiDa %></span>
                                        <img src="/public/images/page/fire.png" style="width: 20px; height: 20px;" alt="">
                                    </div>
                                </div>
                                <div class="px-4 py-2 rounded-4 bg-body-tertiary d-flex flex-column align-items-center" style="width: max-content;">
                                    <span>Bước giá</span>
                                    <div class="d-flex align-items-center gap-2 mt-1">
                                        <span class="fs-7 fw-bold dark-blue-color">$ <%= list[i].BuocGia %></span>
                                        <img src="/public/images/page/fire.png" style="width: 20px; height: 20px;" alt="">
                                    </div>
                                </div>
                                <div class="px-4 py-2 rounded-4 bg-body-tertiary d-flex flex-column align-items-center" style="width: max-content;">
                                    <span>Lượt đấu</span>
                                    <div class="d-flex align-items-center gap-2 mt-1">
                                        <span class="fs-7 fw-bold dark-blue-color">$???</span>
                                        <img src="/public/images/page/fire.png" style="width: 20px; height: 20px;" alt="">
                                    </div>
                                </div>
                            </div>
                            <%if(list[i].winname != null){%>
                            <div class="mt-4 d-flex justify-content-between align-items-center">
                                <div class="d-flex gap-3 align-items-center">
                                    <img src="/public/images/user/<%= list[i].winavatar %>" class="rounded-circle"
                                    style="width: 60px; height: 60px;" alt="">
                                    <div class="d-flex flex-column">
                                        <span class="dark-blue-color text fs-6 fw-bold"><%=list[i].winname%></span>
                                        <span class="primary-color text fs-6 fw-bold">$<%=list[i].GiaThapNhat%></span>
                                    </div>
                                </div>
                                <div class="rounded-circle d-flex justify-content-center align-items-center" 
                                    style="width: 50px; height: 50px; background-color: rgba(247, 235, 15, 0.545); border: 2px solid rgba(247, 235, 15);">
                                    <img src="/public/images/page/king.png" style="width: 25px; height: 25px;" alt="">
                                </div>
                            </div>
                            <%}%>
                        </div>
                    </div>
                    </a>
                    <%} %>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3" style="margin-left: 14rem;">
                <button class="primary-color px-4 py-2 bg-white" 
                style="border: 1px solid #F33800; border-radius: 0px 10px;">Xem thêm</button>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
    <script src="/public/script/auction-now.js"></script>
</body>
</html>